<!-- Updating a user -->
<h1>Update a user</h1>
<form action="/users/:id" method="POST">
  <div>
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" required>
  </div>
  <div>
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required>
  </div>
  <input type="hidden" name="_method" value="PUT"> <!--  need this to allow PUT method -->
  <input type="submit" value="Update">
</form>

<!-- Deleting a user -->
<h1>Delete a user</h1>
<form action="/users/:id" method="POST">
  <input type="hidden" name="_method" value="DELETE"> <!--  need this to allow DELETE method -->
  <input type="submit" value="Delete">
</form>