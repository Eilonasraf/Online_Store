<!-- views/login.ejs -->

<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <title>Login</title>
    <!-- Add the bootstrap CSS here -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>

<body>
    <div class="container full-height">
        <div class="row flex center v-center full-height">
            <div class="col-sm-4 col-xs-8">
                <div class="form-box">
                    <form action="/users/login" method="POST">
                        <fieldset>
                            <legend>Sign in</legend><img id="avatar" class="avatar round" src="avatar.png" /><input id="username" class="form-control" type="text" name="username" placeholder="username" required /><input id="password" class="form-control" type="password" name="password" placeholder="password" required /><button class="btn btn-primary btn-block" type="submit">LOGIN </button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Include the jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- Include the bootstrap JS library -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script>
    $('form').on('submit', function(event) {
        event.preventDefault();

        var formData = {
            'username': $('input[name=username]').val(),
            'password': $('input[name=password]').val()
        };

        $.ajax({
            type: 'POST',
            url: '/users/login',
            data: formData,
            dataType: 'json',
            encode: true
        }).done(function(data) {
            console.log(data);
            // Handle the response here
        });
    });
    </script>
</body>

</html>

// This script listens for the form submission event, prevents the default form submission, 
// prepares the form data in a JavaScript object,
// and uses jQuery's $.ajax() function to send a POST request to my Express server at the /users/login endpoint.
